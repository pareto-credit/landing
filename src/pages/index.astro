---
import PageLayot from 'layouts/page.astro';
import { HomePage as PageSettings } from 'sitemap/pages';
import { type Locales, defaultLang } from 'sitemap/copyright';
import HeroSection from 'sections/home/hero/view.astro';
import SolutionSection from 'sections/home/solution/view.astro';
import { HomePageSections } from 'components/sections/sectionTypes';
import HowItWorks from 'components/sections/home/how-it-works/view.astro';
import OurAdvantage from 'components/sections/home/our-advantage/view.astro';
import Transparent from 'components/sections/home/transparent/view.astro';
import Ecosystem from 'components/sections/home/ecosystem/view.astro';
import GetInTouch from 'components/sections/home/get-in-touch/view.astro';
import CommunitySection from 'components/sections/home/community/view.astro';
import NewsSection from 'components/sections/home/news/view.astro';

type Props = {
	locale: Locales
};

const { locale = defaultLang } = Astro.props;

const COPY = PageSettings.copy[locale];
---

<PageLayot {...PageSettings} locale={locale}>
    <HeroSection COPY={COPY.heroSection} id={HomePageSections.Hero}/>
    <SolutionSection COPY={COPY.solutionSection} id={HomePageSections.Solution}/>
    <HowItWorks COPY={COPY.HowItWorks} id={HomePageSections.HowItWorks}/>
    <OurAdvantage COPY={COPY.OurAdvantage} id={HomePageSections.OurAdvantage}/>
    <Transparent COPY={COPY.Transparent} id={HomePageSections.Transparent}/>
    <Ecosystem COPY={COPY.Ecosystem} id={HomePageSections.Ecosystem}/>
    <GetInTouch COPY={COPY.GetInTouch} id={HomePageSections.GetInTouch}/>
    <CommunitySection COPY={COPY.CommunitySection} id={HomePageSections.Community}/>
    <NewsSection COPY={COPY.NewsSection} id={HomePageSections.News}/>
</PageLayot>
